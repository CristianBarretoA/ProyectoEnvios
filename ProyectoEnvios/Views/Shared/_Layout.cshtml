<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Proyecto Envios</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar">awdawd</span>
                    <span class="icon-bar">ergerg</span>
                    <span class="icon-bar">qweqweqw</span>
                </button>
                @if (Session["userID"] == null)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    </ul>
                }
                else
                {
                    string[] user = Session["userID"].ToString().Split(',');
                    switch (user[1])
                    {
                        case "Cliente":
                            @Html.ActionLink("Inicio", "Index", "Usuario", new { area = "" }, new { @class = "navbar-brand" })
                            break;
                        case "Trabajador":
                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <li>@Html.ActionLink("Inicio", "Index", "Trabajador", new { area = "" }, new { @class = "navbar-brand" })</li>
                                    <li>@Html.ActionLink("Registrar envio", "registrarEnvio", "Envio")</li>
                                    <li class="dropdown">
                                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Clientes <span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Registrar clientes", "agregarCliente", "Trabajador")</li>
                                            <li>@Html.ActionLink("Consultar clientes", "consultarClientes", "Trabajador")</li>
                                        </ul>
                                    </li>
                                    <li>@Html.ActionLink("Consultar envios", "Index", "Trabajador")</li>
                                </ul>
                                <form class="navbar-form navbar-left" action="@Url.Action("ConsultaGuia","Envio")">
                                    <div class="input-group">
                                        <input type="text" id="id" name="id" class="form-control" placeholder="N° Guia">
                                        <div class="input-group-btn">
                                            <button class="btn btn-default" type="submit">
                                                <i class="glyphicon glyphicon-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            break;
                        case "Mensajero":
                            @Html.ActionLink("Inicio", "Index", "Mensajero", new { area = "" }, new { @class = "navbar-brand" })
                            break;
                        default:
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Login", "Login", "Home")</li>
                            </ul>
                            break;
                    }
                }
            </div>
            <div class="nav navbar-nav navbar-right">
                @if (Session["userID"] == null)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Login", "Login", "Home")</li>
                    </ul>
                }
                else
                {
                    string[] user = Session["userID"].ToString().Split(',');

                    <span class="nav navbar-text">Bienvenido, @user[0]</span>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#" data-toggle="modal" data-target="#logoutModal">Logout</a></li>
                    </ul>
                }

            </div>

        </div>
    </div>
    <div class="container body-content">
        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-danger">
                            Seguro desea cerrar sesion?
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </h5>
                    </div>
                    <div class="modal-body">Presione "Logout" si desea cerrar su sesion actual</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        @Html.ActionLink("Logout", "Logout", "Usuario", new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cristian H. Barreto</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
