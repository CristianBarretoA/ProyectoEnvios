@model ProyectoEnvios.Models.EnvioCS

@{
    ViewBag.Title = "ConsultaGuia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consulta de la Guia #@Html.DisplayFor(model => model.idEnvio)</h2>

<div>
    @if (ViewData["Error"] != null)
    {
        <div class="text-danger">
            <strong>Error: @ViewData["Error"].ToString()</strong>
        </div>
    }
    <hr />

    <div class="container-fluid col-md-8 col-md-offset-2">
        <div class="row">
            <h3 style="background-color:lightgray; padding:10px;">REMITENTE/ORIGEN</h3>
            <hr />
            <div class="col-md-5 col-md-offset-1">
                <p>Ciudad de Origen</p>
                <p>CAMBIAR</p>
            </div>
            <div class="col-md-5 col-md-offset-1">
                <p>Ciudad de Destino</p>
                <p>@Html.DisplayFor(model => model.destino)</p>
            </div>
        </div>
        <div class="row">
            <hr />
            <div class="col-md-5 col-md-offset-1">
                <p>Fecha de Repecion</p>
                <p>@Html.DisplayNameFor(model => model.fechaEnvio.Year)</p>
            </div>
            <div class="col-md-5 col-md-offset-1">
                <p>Hora de Recepcion</p>
                <p>@Html.DisplayNameFor(model => model.fechaEnvio.Hour)</p>
            </div>
        </div>
        <div class="row">
            <hr />
            <div class="col-md-5 col-md-offset-1">
                <p>Nombre de Remitente</p>
                <p>NOMBRE</p>
            </div>
            <div class="col-md-5 col-md-offset-1">
                <p>Direccion</p>
                <p>DIRECCION DEL REMITENTE</p>
            </div>
        </div>
        <div class="row">
            <hr />
            <div class="col-md-3 col-md-offset-1">
                <p>Cantidad de Envios</p>
                <p>1</p>
            </div>
            <div class="col-md-3 col-md-offset-1">
                <p>Tipo de Producto</p>
                <p>COMIMDA</p>
            </div>
            <div class="col-md-3 col-md-offset-1">
                <p>Peso total (Kg)</p>
                <p>@Html.DisplayFor(model => model.peso)</p>
            </div>
        </div>


        <div class="row">
            <h3 style="background-color:lightgray; padding:10px;">DESTINATARIO/DESTINO</h3>
            <hr />
            <div class="col-md-5 col-md-offset-1">
                <p>Ciudad Origen</p>
                <p>CAMBIAR</p>
            </div>
            <div class="col-md-5 col-md-offset-1">
                <p>Ciudad Destino</p>
                <p>@Html.DisplayFor(model => model.destino)</p>
            </div>
        </div>
        <div class="row">
            <hr />
            <div class="col-md-5 col-md-offset-1">
                <p>Ciudad Origen</p>
                <p>CAMBIAR</p>
            </div>
            <div class="col-md-5 col-md-offset-1">
                <p>Ciudad Destino</p>
                <p>@Html.DisplayFor(model => model.destino)</p>
            </div>
        </div>
        <div class="row">
            <hr />
            <div class="col-md-5 col-md-offset-1">
                <p>Ciudad Origen</p>
                <p>CAMBIAR</p>
            </div>
            <div class="col-md-5 col-md-offset-1">
                <p>Ciudad Destino</p>
                <p>@Html.DisplayFor(model => model.destino)</p>
            </div>
        </div>
    </div>















    <div class="container-fluid">
        <div class="row">

            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.idEnvio)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.idEnvio)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.fechaEnvio)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.fechaEnvio)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.destino)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.destino)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.peso)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.peso)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.estado)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.estado)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.direccion)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.direccion)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="dl-horizontal"></dl>
            </div>

        </div>
    </div>

</div>
