@model ProyectoEnvios.Models.EnvioCS
@{
    ViewBag.Title = "Inicio";
}

<div class="jumbotron">
    <h1>Sistema de envios</h1>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.idEnvio, htmlAttributes: new { @class = "control-label col-md-2" })
                       
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.idEnvio, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.idEnvio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Consultar" class="btn btn-default" />
                        </div>
                    </div>

        </div>
    }
</div>