@model IEnumerable<ProyectoEnvios.Models.ClienteCS>

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Home/Login", false);
    }
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Registrar nuevo cliente", "agregarCliente")
</p>

@if (ViewData["Exito"] != null)
{
    <div class="alert alert-success" role="alert">
        <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
        <span class="sr-only">Exito:</span>
        @TempData["Exito"].ToString()
    </div>
}
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        @TempData["Error"].ToString()
    </div>
}
@ViewBag.Msg
<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentificacionUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EdadUsuario)
            </th>
            <th>
                Acciones
            </th>
        </tr>
        @foreach (var item in Model)
        {
            string a = "deleteModal" + item.NombreUsuario;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApellidoUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdentificacionUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EdadUsuario)
                </td>

                <td>
                    <a href="@Url.Action("editarCliente", new { id = item.IdentificacionUsuario })" class="btn btn-info" title="Editar Cliente">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                    <a href="#" data-toggle="modal" data-target="#@a" class="btn btn-danger" title="Eliminar Cliente">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>

            <div class="modal fade" id="@a" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-danger">
                                ¿Esta seguro de eliminar al usuario?
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </h5>
                        </div>
                        <div class="modal-body">Presione "Borrar" si desea eliminar al usuario @item.NombreUsuario @item.ApellidoUsuario</div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                            @Html.ActionLink("Borrar", "borrarCliente", new { id = item.IdentificacionUsuario }, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>

        }
    </table>
</div>

